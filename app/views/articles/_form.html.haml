- javascript_include_tag 'app/assets/javascripts/get_current_location.js'

= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :image
    = f.file_field :image

    = f.fields_for :location do |l|
      = l.hidden_field :latitude
      = l.hidden_field :longitude
  .actions
    = f.submit 'Save'
