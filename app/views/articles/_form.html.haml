= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :image
    = f.file_field :image
  .field
    = fields_for @location do |c|
      = c.text_field :address, :id => "textField"
  %script{:src => "http://maps.googleapis.com/maps/api/js?libraries=places", :type => "text/javascript"}
  .actions
    = f.submit 'Save'
